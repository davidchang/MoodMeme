extends layout

block content
  div.row-fluid(ng-show='!invitedPersonAlready')
    div Who can you trust?
    input#invite.small-margin-top(type='text', ng-model='invitedPerson', placeholder='Please Enter a valid email address')
    button.btn(ng-click='invite()') Invite
  div.row-fluid(ng-show='invitedPersonAlready')
    div Thanks for entering your friend! They will be notified by email.

block scripts
  script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.3/angular.min.js')
  script(src='/scripts/app.js')
  script(src='/scripts/network-controller.js')
  script(src='/scripts/angular-local-storage.js')
  script(src='/scripts/services.js')
